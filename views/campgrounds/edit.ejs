<% layout('../layouts/boilerplate') %>
<div class="row">
<h1>Edit <%= newCamp.title %></h1>
<div class="col-6 offset-3">
<!-- <h1>Edit <%= newCamp.title %></h1> -->
<form action="/campground/<%= newCamp._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
<div class="mb-3">
		<label class="form-label" for="title">Title</label>                                                                   <input class="form-control" type="text" id="title" name="camp[title]" value="<%= newCamp.title %>" required/>
		<div class="valid-feedback">
                        Looks good!
                </div>
		</div>
		<div class="mb-3">
                <label class="form-label" for="location">Location</label>                                                             <input class="form-control" type="text" id="location" name="camp[location]" value="<%= newCamp.location %>" required/>
		<div class="valid-feedback">
                        Looks good!
                        </div>
		</div>
		<div class="mb-3">                                         <label class="form-label" for="image">Image Url</label>                                                               <input class="form-control" type="text" id="image" name="camp[image]" value="<%= newCamp.image %>" required/>
		<div class="valid-feedback">
                        Looks good!
                        </div>
		</div>

		<div class="mb-3">                                         <label class="form-label" for="price">Campground Price</label>                                                        <div class="input-group">
  <span class="input-group-text" id="price-label">$</span>   <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price" aria-describedby="price-lab
el" name="camp[price]" value="<%= newCamp.price %>" required/>
<div class="valid-feedback">                                       Looks good!                                                </div>
</div>
</div>
		<div class="mb-3">
		<label class="form-label" for="description">Description</label>
<textarea class="form-control" type="text" id="description"
name="camp[description]" required><%= newCamp.description %></textarea>
<div class="valid-feedback">                                       Looks good!                                                </div>
                </div>
                <div class="mb-3">
		<button class="btn btn-success">Update Campground</button>
                </div>
        </form>
	<a href="/campground">Back to  Campgrounds</a>
        </div>
        </div>
